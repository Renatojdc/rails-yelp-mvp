<p style="color: green"><%= notice %></p>

<h1>Reviews</h1>

<div id="reviews">
  <% @reviews.each do |review| %>
    <p>
      <%= review.content %>
      <%= review.rating %>
     </p>
  <% end %>
</div>

<%= link_to "New review", new_restaurant_review_path(@restaurant) %>
<%= link_to "Back to restaurants", restaurants_path %>
