<h1>New review</h1>

<%= render "form", review: @review %>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
<br>

<div>
  <%= link_to "Back to reviews", reviews_path %>
</div>
